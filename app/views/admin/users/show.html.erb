<h1>userの詳細</h1>
<p>名前: <%= @user.name %></p>
<p>Eメール: <%= @user.email %></p>

<p>制作したタスク:<p>
<% @user.tasks.each do |task| %>
  <table>
    <tr>
      <td><%= task.title %></td>
      <td><%= task.content %></td>
      <td><%= task.deadline %></td>
      <td><%= task.status %></td>
      <td><%= task.priority %></td>
    </tr>
  </table>  
<% end %>
<%= link_to "編集する", edit_admin_user_path(@user) %>