<h1>タスク一覧</h1>

<p><%= notice %></p>

<div>
  <%= form_with(scope: :task, url: tasks_path, method: :get, local: true ) do |form| %>
    <%= form.label :タイトル検索 %>
    <%= form.text_field :title %>
    <%= form.label :ステータス検索 %>
    <%= form.select :status, Task.statuses.keys.to_a, {include_blank: "選択して下さい"} %>
    <%= form.submit '検索' %>
  <% end %>  
</div>

<table>
  <tr>
    <th>タイトル</th>
    <th>詳細</th>
    <th>終了期限</th>
    <th>ステータス</th>
    <th>優先順位</th>
  </tr>

<% @tasks.each do |task| %>
  <tr class="task_row">
    <td><%= task.title %></td>
    <td><%= task.content %></td>
    <td><%= task.deadline %></td>
    <td><%= task.status %></td>
    <td><%= task.priority %></td>
    <td><%= link_to '詳細', task_path(task.id) %></td>
    <td><%= link_to "編集", edit_task_path(task.id), data: { confirm: '本当に編集していいですか？' } %></td>
    <td><%= link_to '削除', task_path(task.id), method: :delete, data: { confirm: '本当に削除していいですか？' } %></td>
  </tr>
<% end %>
</table>

<%= link_to '新しくタスクを作成する', new_task_path %>
<%= link_to "終了期限でソートする", tasks_path(sort_expired: "true") %>
<%= link_to "優先順位でソートする", tasks_path(sort_priority_high: "true") %>

<%= paginate @tasks %>