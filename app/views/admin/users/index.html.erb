<h1>管理画面</h1>

<table>
  <tr>
    <th>名前</th>
    <th>Eメール</th>
    <th>管理権限</th>
    <th>タスク数</th>
  </tr>
  <% @users.each do |user| %>
    <tr>
      <td><%= user.name %></td>
      <td><%= user.email %></td>
      <td><%= user.admin ? 'あり' : 'なし'%></td>
      <td><%= user.tasks.count %></td>
      <td><%= link_to '詳細', admin_user_path(user) %></td>
      <td><%= link_to '編集', edit_admin_user_path(user) %></td>
      <td><%= link_to '削除', admin_user_path(user), method: :delete %></td>
    </tr>
  <% end %>
</table>

<%= link_to "ユーザー新規作成", new_admin_user_path %>